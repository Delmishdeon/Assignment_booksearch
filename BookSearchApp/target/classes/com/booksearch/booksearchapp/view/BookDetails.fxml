<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.booksearch.booksearchapp.controller.BookDetailsController">
    <VBox spacing="20" alignment="CENTER" prefWidth="400" prefHeight="600">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Book Cover Image -->
        <ImageView fx:id="bookImageView" fitWidth="200" fitHeight="300" preserveRatio="true"/>

        <!-- Book Title -->
        <Label fx:id="titleLabel" text="Book Title" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <!-- Author Name -->
        <Label fx:id="authorLabel" text="Author" style="-fx-font-size: 16px; -fx-text-fill: #555555;"/>

        <!-- Description -->
        <Label fx:id="descriptionLabel" text="Description" wrapText="true" maxWidth="350" style="-fx-font-size: 14px; -fx-text-fill: #777777;"/>

        <!-- Back Button -->
        <Label text="Back" style="-fx-font-size: 14px; -fx-text-fill: #2196F3; -fx-underline: true;" onMouseClicked="#handleBack"/>
    </VBox>
</AnchorPane>
